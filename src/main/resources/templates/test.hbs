{{#partial "main"}}
    {{allanimals}}
    <h3>Wildlife Tracker</h3>
    {{#if allanimals}}
        <h4 class="text-center">Animals</h4>
        <table class="table text-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Animals Name</th>
                <th scope="col">Health Status</th>
                <th scope="col">Age</th>

            </tr>
            </thead>
            <tbody>
            {{#each allanimals}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{health}}</td>
                    <td>{{age}}</td>

                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}
{{/partial}}

{{> layout.hbs}}