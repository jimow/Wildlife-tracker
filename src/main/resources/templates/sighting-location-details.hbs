

{{#partial "content"}}
    <h2 class="text-center"><u><b>{{location}}</b></u></h2>
    <h4 class="text-center">Animals Spotted In This Region</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal Seen</th>
            <th scope="col">Time</th>
            <th scope="col">Ranger</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalName}}</td>
                <td>{{readableTimestamp}}</td>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}